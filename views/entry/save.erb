<!DOCTYPE html>
<%#include "entry.h" %>
<% tfetch(QVariantMap, entry); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h2>Editing Entry</h2>

<%== formTag(urla("save", entry["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="entry[id]" value="<%= entry["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Word<br /><input type="text" name="entry[name]" value="<%= entry["name"] %>" class="hacm" /></label>
  </p>
  <p>
    <label>Definition<br /><textarea name="entry[body]" rows="25" cols="80"><%= entry["body"] %></textarea></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", entry["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
